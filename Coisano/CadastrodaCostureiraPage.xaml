<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class=" Coisano.CadastrodaCostureiraPage"
             Title="Cadastro da Costureira(O)"
              Shell.NavBarIsVisible="false"
             BackgroundColor="#b9edcb">

    <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
        
        <Label Text="Cadastro da Costureira(O)"
               FontSize="24"
               HorizontalOptions="Center" />

        <Frame Padding="10" BorderColor="Gray">
            <StackLayout>
                <Label Text="Nome da Costureira(O):" />
                <Entry x:Name="NomeEntry" Placeholder="Insira o nome" />
            </StackLayout>
        </Frame>

        <Frame Padding="10" BorderColor="Gray">
            <StackLayout>
                <Label Text="Telefone:" />
                <Entry x:Name="TelefoneEntry" Placeholder="Insira o telefone" />
            </StackLayout>
        </Frame>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Continuar e Salvar" Clicked="OnContinuarSalvarClicked"  BackgroundColor="#b8f092"/>
            
        </StackLayout>

        <Label x:Name="MensagemErro" Text="Dados incorretos!!!" TextColor="Red" IsVisible="False" HorizontalOptions="Center" />

    </StackLayout>

</ContentPage>
